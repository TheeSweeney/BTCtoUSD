{
	"manifest_version" : 2,
	"name" : "BTC to USD",
	"description" : "This extenstion will show a random cat image to keep you motivated throughout the day",
	"version" : "0.1",
	"browser_action" :  {
		"default_icon" : "icon.png",
		"default_popup" : "popup.html",
		"default_title" : "BTCtoUSD"
	},

	"background": {
	  "scripts": ["conversion.js"]
	},

	"permissions" : [
		"contextMenus"
	],

	"icons" : {
		"16": "icon.png"
	}
}